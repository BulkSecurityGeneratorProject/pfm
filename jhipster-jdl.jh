

entity Bank {
	name String required
}

entity Person {
	name String required
}

entity BankAccount {
    acNumber String required,
    ifsc String,
    micr String
}

entity Account {
	name String required,
    balance BigDecimal,
}

relationship OneToOne {
	Account{bankAccount} to BankAccount{account}
}

relationship ManyToOne {
	BankAccount{bank} to Bank
}

relationship ManyToOne {
	Account{owner} to Person
}

entity Transaction {
	amount BigDecimal required,
    desc String required,
    date Instant required,
    isTransfer Boolean required
}

relationship ManyToOne {
	Transaction{account} to Account
}

entity TransactionCategory {
	name String required
}

relationship ManyToOne {
	Transaction{category} to TransactionCategory
}

paginate * with pagination

dto * with mapstruct

service all with serviceImpl
